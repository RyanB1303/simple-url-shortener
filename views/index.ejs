<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <meta name="Description" content="Simple Link Shortener" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/4.5.0/darkly/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/css/all.min.css"
    />
    <link rel="stylesheet" href="assets/css/style.css" />
    <title>LINK SHRINKER</title>
  </head>
  <body>
    <div class="container my-5">
      <h1 class="my-5">Link Shrinker</h1>
      <form action="/shortUrls" method="post" class="mt-5">
        <input
          class="form-control"
          type="url"
          name="fullUrl"
          id="fullUrl"
          placeholder="URL"
        />
        <button class="btn btn-light" type="submit">Submit</button>
      </form>

      <h2 class="mt-5">Link List</h2>
      <table class="table table-dark">
        <thead class="thead-dark">
          <tr>
            <th>URL</th>
            <th>Short URL</th>
            <th>Click</th>
          </tr>
        </thead>
        <tbody>
          <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td>
              <a href="<%= shortUrl.full %>" target="_blank"
                ><%= shortUrl.full %></a
              >
            </td>
            <td>
              <a href="<%= shortUrl.short %>" target="_blank"
                ><%= shortUrl.short %></a
              >
            </td>
            <td><%= shortUrl.clicks %></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.0/js/bootstrap.min.js"></script>
  </body>
</html>
